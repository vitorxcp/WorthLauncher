{
  "name": "worthlauncher",
  "version": "1.7.3432-alpha",
  "description": "Launcher Otimizado 1.8.9 com Chat e Auto-Update",
  "main": "WorthLauncher.js",
  "email": "vitor.xp.1958@gmail.com",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"electron .\"",
    "server": "node serverSocket/server.js",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux"
  },
  "author": "vitorxp",
  "license": "MIT",
  "homepage": "https://github.com/vitorxcp/WorthLauncher",
  "icon": "build/assets/Logo-Worth-256x256.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorxcp/WorthLauncher.git"
  },
  "workspaces": [
    "plugins/*"
  ],
  "api": "none",
  "badges": [
    {
      "description": "License: MIT",
      "href": "https://img.shields.io/badge/License-MIT-green.svg",
      "url": "https://img.shields.io/badge/License-MIT-green.svg",
      "alt": "License: MIT"
    }
  ],
  "contributors": [
    {
      "name": "vitorxp",
      "email": "vitor.xp.1958@gmail.com"
    },
    {
      "name": "Klovers7"
    }
  ],
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.6.7",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "express-session": "^1.18.2",
    "fs-extra": "^11.3.2",
    "lucide-react": "^0.561.0",
    "marked": "^17.0.1",
    "minecraft-launcher-core": "^3.13.0",
    "msmc": "^5.0.2",
    "node-7z": "^3.0.0",
    "socket.io-client": "^4.8.1",
    "sudo-prompt": "^9.2.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-html-inject": "^1.1.2"
  },
  "build": {
    "appId": "com.vitorxp.worthlauncher",
    "productName": "WorthLauncher",
    "publish": [
      {
        "provider": "github",
        "owner": "vitorxcp",
        "repo": "WorthLauncher"
      }
    ],
    "copyright": "Copyright Â© 2025 vitorxp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "WorthLauncher.js",
      "preload.js",
      "package.json",
      "build/**/*",
      "ui/**/*",
      "plugins/**/*"
    ],
    "extraResources": [
      {
        "from": "mods",
        "to": "mods",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/assets/Logo-Worth-256x256.ico"
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb",
        "rpm"
      ],
      "icon": "build/assets/Logo-Worth-256x256.png",
      "category": "Game",
      "description": "Launcher de Minecraft Otimizado para Rede Worth",
      "artifactName": "${productName}-Linux-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/assets/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-Mac-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WorthLauncher",
      "installerIcon": "build/assets/Logo-Worth-256x256.ico",
      "uninstallerIcon": "build/assets/Logo-Worth-256x256.ico",
      "installerHeader": "build/assets/Logo-Worth-256x256.ico",
      "installerHeaderIcon": "build/assets/Logo-Worth-256x256.ico",
      "runAfterFinish": true,
      "guid": "worthlauncher-4a9b2c1d-8e7f-4032-9876-543210abcdef"
    }
  }
}
