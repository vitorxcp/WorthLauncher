{
  "name": "worthlauncher",
  "version": "1.0.2-alpha",
  "description": "Launcher Otimizado 1.8.9 com Chat e Auto-Update",
  "main": "WorthLauncher.js",
  "email": "vitor.xp.1958@gmail.com",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"electron .\"",
    "server": "node serverSocket/server.js",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux"
  },
  "author": "vitorxp",
  "license": "MIT",
  "homepage": "https://github.com/vitorxcp/WorthLauncher",
  "icon": "build/assets/Logo-Worth-256x256.png",
  "repository": {
    "type": "git",
    "url": "git+"
  },
  "workspaces": [
    "plugins/*"
  ],
  "api": "none",
  "badges": [
    {
      "url": "https://img.shields.io/badge/License-MIT-green.svg",
      "alt": "License: MIT"
    }
  ],
  "contributors": [
    {
      "name": "vitorxp",
      "email": "vitor.xp.1958@gmail.com"
    },
    {
      "name": "Klovers7"
    }
  ],
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.6.7",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.1.0",
    "express-session": "^1.18.2",
    "fs-extra": "^11.2.0",
    "minecraft-launcher-core": "^3.13.0",
    "msmc": "^5.0.2",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.7.4",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  },
  "build": {
    "appId": "com.vitorxp.worthlauncher",
    "productName": "WorthLauncher",
    "copyright": "Copyright Â© 2025 vitorxp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "WorthLauncher.js",
      "preload.js",
      "package.json",
      "index.html",
      "build/**/*",
      "plugins/**/*"
    ],
    "extraResources": [
      {
        "from": "mods",
        "to": "mods",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/assets/Logo-Worth-256x256.ico",
      "artifactName": "${productName}-Windows-${version}.${ext}"
    },
    "linux": {
      "target": [
        "tar.gz",
        "deb",
        "rpm"
      ],
      "icon": "build/assets/Logo-Worth-256x256.png",
      "category": "Game",
      "description": "Launcher de Minecraft Otimizado para Rede Worth",
      "artifactName": "${productName}-Linux-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/assets/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-Mac-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "include": "build/installer.nsh"
    }
  }
}